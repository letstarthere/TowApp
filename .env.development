# Development Environment - Testing Configuration
NODE_ENV=development
TEST_PHASE=auth_infrastructure

# Feature Flags - Development
FEATURE_SERVICE_REQUEST=false
FEATURE_LIVE_TRACKING=false
FEATURE_PUSH_NOTIFICATIONS=false
FEATURE_PAYMENTS=false
FEATURE_ADMIN_OVERRIDES=false

# Test Features - Enabled for Development
MOCK_USERS=true
MOCK_DRIVERS=true
FAKE_LOCATIONS=true
MOCK_NOTIFICATIONS=true
SIMULATE_FAILURES=true
DEBUG_LOGGING=true
TEST_ACCOUNTS_ONLY=true
DEBUG_MODE=true

# Database
DATABASE_URL=sqlite:./test.db

# Security - Development Keys
JWT_SECRET=dev-jwt-secret-not-for-production
SESSION_SECRET=dev-session-secret-not-for-production
ADMIN_JWT_SECRET=dev-admin-jwt-secret-not-for-production

# External Services - Mock/Test Keys
PUSH_NOTIFICATION_KEY=test-push-key
SMS_API_KEY=test-sms-key
EMAIL_API_KEY=test-email-key
PAYMENT_GATEWAY_KEY=test-payment-key

# Logging
LOG_LEVEL=debug
LOG_RETENTION_DAYS=7

# Phase-Specific Overrides (uncomment as needed)
# Phase 0: Authentication & Infrastructure
# TEST_PHASE=auth_infrastructure

# Phase 1: Driver Core
# TEST_PHASE=driver_core
# FEATURE_LIVE_TRACKING=true
# MOCK_DRIVERS=true
# FAKE_LOCATIONS=true

# Phase 2: User Core  
# TEST_PHASE=user_core
# MOCK_USERS=true

# Phase 3: Service Request Lifecycle
# TEST_PHASE=service_request_lifecycle
# FEATURE_SERVICE_REQUEST=true
# MOCK_USERS=true
# MOCK_DRIVERS=true

# Phase 4: Live Interaction
# TEST_PHASE=live_interaction
# FEATURE_LIVE_TRACKING=true
# FEATURE_PUSH_NOTIFICATIONS=true
# MOCK_NOTIFICATIONS=true

# Phase 5: Failure & Edge Cases
# TEST_PHASE=failure_edge_cases
# SIMULATE_FAILURES=true
# DEBUG_LOGGING=true

# Phase 6: Admin Oversight
# TEST_PHASE=admin_oversight
# FEATURE_ADMIN_OVERRIDES=true