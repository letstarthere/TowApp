# Production Environment - Safe Defaults
NODE_ENV=production
TEST_PHASE=production

# Feature Flags - Production
FEATURE_SERVICE_REQUEST=true
FEATURE_LIVE_TRACKING=true
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_PAYMENTS=true
FEATURE_ADMIN_OVERRIDES=true

# Test Features - Disabled in Production
MOCK_USERS=false
MOCK_DRIVERS=false
FAKE_LOCATIONS=false
MOCK_NOTIFICATIONS=false
SIMULATE_FAILURES=false
DEBUG_LOGGING=false
TEST_ACCOUNTS_ONLY=false
DEBUG_MODE=false

# Database
DATABASE_URL=postgresql://user:pass@localhost:5432/towapp_prod

# Security
JWT_SECRET=your-super-secure-jwt-secret-here
SESSION_SECRET=your-super-secure-session-secret-here
ADMIN_JWT_SECRET=your-super-secure-admin-jwt-secret-here

# External Services
PUSH_NOTIFICATION_KEY=your-push-notification-key
SMS_API_KEY=your-sms-api-key
EMAIL_API_KEY=your-email-api-key
PAYMENT_GATEWAY_KEY=your-payment-gateway-key

# Logging
LOG_LEVEL=info
LOG_RETENTION_DAYS=30